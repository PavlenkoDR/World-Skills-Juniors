<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.Page4">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <!-- Entry - поле для ввода. Placeholder - подсказка -->
            <Entry x:Name="entryLogin" Text="pavlenkocraft@gmail.com" Placeholder="Введите логин"></Entry>
            <!-- IsPassword превращает наш текст в точки -->
            <Entry x:Name="entryPassword" IsPassword="true" Text="qweqweqwe" Placeholder="Введите пароль"></Entry>
            <Entry x:Name="entryPasswordRepeat" IsPassword="true" Text="qweqweqwe" Placeholder="Повторите пароль пароль"></Entry>
            <Entry x:Name="entryName" Text="Валерий" Placeholder="Введите имя"></Entry>
            <Entry x:Name="entrySecondName" Text="Жмышенко" Placeholder="Введите фамилию"></Entry>
            <Button Text="Регистрация" Clicked="Button_Clicked"></Button>
            <Label Text="Hello Xamarin.Forms!" x:Name="autt" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>